@Test
void testDeleteArchivalStorageMapping_success() {
    String id = "1";

    ArchivalStorageMappingObj input = new ArchivalStorageMappingObj(
        "LOB123", "FILENET", null, null, MetadataScopeEnum.DOCUMENT, null
    );

    ArchStorageMapping entity = new ArchStorageMapping();
    entity.setLob("LOB123");
    entity.setStorage("FILENET");
    entity.setMetadataScope(MetadataScopeEnum.DOCUMENT); // **This is the missing line**

    when(repo.findById(1L)).thenReturn(Optional.of(entity));

    archivalApiService.deleteArchivalStorageMapping(id, input);

    verify(repo).deleteById(1L);
}