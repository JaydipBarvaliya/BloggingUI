public static int countPossibleWinners(List<Integer> initialRewards) {
    int n = initialRewards.size();
    int[] rewards = new int[n];
    for (int i = 0; i < n; i++) {
        rewards[i] = initialRewards.get(i);
    }

    // Step 1: Sort all rewards to simulate the best possible final scores for others
    int[] sorted = rewards.clone();
    Arrays.sort(sorted);

    // Step 2: Compute the best total score a non-winner can get
    // Give them tournament points from n-1 down to 1
    int maxOtherTotal = 0;
    for (int i = 0; i < n - 1; i++) {
        maxOtherTotal = Math.max(maxOtherTotal, sorted[n - 1 - i] + (n - 1 - i));
    }

    // Step 3: Count winners
    int count = 0;
    for (int i = 0; i < n; i++) {
        if (rewards[i] + n >= maxOtherTotal) {
            count++;
        }
    }

    return count;
}