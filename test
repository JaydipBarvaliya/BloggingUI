@Test
public void getArchivalStorageMappingTest() {
    String id = "20";
    ArchStorageMapping obj = new ArchStorageMapping();
    obj.setLob("TestLob");
    obj.setId(Long.valueOf(id));
    obj.setMetadataField("TestMetadata");
    obj.setDocumentType("TestDocType");
    obj.setMetadataScope(MetadataScopeEnum.DOCUMENT);

    when(repo.findById(Long.valueOf(id))).thenReturn(Optional.of(obj));

    ArchivalStorageMappingObj result = archApiService.getArchivalStorageMapping(id);

    assertNotNull(result);
    assertEquals("TestLob", result.getLobId());
    assertEquals("TestMetadata", result.getStorageMetadataField());
    assertEquals("TestDocType", result.getDocumentType());
    assertEquals(MetadataScopeEnum.DOCUMENT, result.getMetadataScope());
}