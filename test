@Test
void testGetArchivalMetadataMapping_ExceptionThrown() {
    String id = "1";

    // Mock to throw an exception from archivalApiMetadataService
    when(archivalApiMetadataService.getArchivalMetadataMapping(id))
            .thenThrow(new RuntimeException("Test Exception"));

    Exception exception = assertThrows(SharedServiceLayerException.class, () -> {
        delegate.getArchivalMetadataMapping(id);
    });

    assertTrue(exception.getMessage().contains("Test Exception"));
}