@Test
public void createClientApps_ExceptionTest() {
    ClientAppsObj clientAppsObj = new ClientAppsObj("TestLob", "TestClient");

    // Simulate an exception in the utility class
    doThrow(new RuntimeException("Simulated")).when(besigopsapiUtil).validateTokenAndClientId(any());

    SharedServiceLayerException thrown = Assertions.assertThrows(
        SharedServiceLayerException.class,
        () -> clientAppsApiDelegate.createClientApps(clientAppsObj)
    );

    Assertions.assertTrue(thrown.getMessage().contains("Simulated"));
}