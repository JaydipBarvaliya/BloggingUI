@ExtendWith(MockitoExtension.class)
public class ClientAppsApiServiceTest {

    @InjectMocks
    private ClientAppsApiService clientAppsApiService;

    @Mock
    private ClientAppConfigurationRepository repo;

    @Mock
    private ModelMapper mapper; // if you're using a mapper

    @Test
    void testGetClientAppConfigData_WhenConfigIsPresent() {
        // Arrange
        String id = "1";
        ClientAppConfiguration config = new ClientAppConfiguration();
        ClientAppsObj expectedDto = new ClientAppsObj();

        when(repo.findById(Long.valueOf(id))).thenReturn(Optional.of(config));
        when(clientAppsApiService.entityToDto(config)).thenReturn(expectedDto);

        // Act
        ClientAppsObj result = clientAppsApiService.getClientAppConfigData(id);

        // Assert
        assertNotNull(result);
        assertEquals(expectedDto, result);
    }

    @Test
    void testGetClientAppConfigData_WhenConfigIsNotPresent() {
        // Arrange
        String id = "1";
        when(repo.findById(Long.valueOf(id))).thenReturn(Optional.empty());

        // Act
        ClientAppsObj result = clientAppsApiService.getClientAppConfigData(id);

        // Assert
        assertNull(result);
    }
}