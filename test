@Test
void test_getConfigData_shouldThrowSharedServiceLayerException_whenServiceFails() {
    // Arrange
    String id = "123";
    ConfigurationService mockService = mock(ConfigurationService.class);
    ConfigurationOpsApiService service = new ConfigurationOpsApiService(mockService);

    // Simulate exception when fetching config
    when(mockService.findByConfigId(Long.valueOf(id)))
        .thenThrow(new RuntimeException("DB Failure"));

    // Act & Assert
    SharedServiceLayerException exception = assertThrows(
        SharedServiceLayerException.class,
        () -> service.getConfigData(id)
    );

    assertTrue(exception.getMessage().contains("DB Failure"));
}