@Test
void test_updateConfig_shouldThrowSharedServiceLayerException_whenIdNotFound() {
    // Given
    String id = "123";
    ArchivalStorageMappingObj mockInput = new ArchivalStorageMappingObj();

    // Mock repo.findById to return empty
    when(repo.findById(Long.valueOf(id))).thenReturn(Optional.empty());

    // When / Then
    SharedServiceLayerException exception = assertThrows(
        SharedServiceLayerException.class,
        () -> archApiService.updateConfig(id, mockInput)
    );

    assertTrue(exception.getMessage().contains("Storage Mapping data not found for ID"));
}