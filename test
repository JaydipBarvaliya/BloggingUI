@Test
void test_createConfig_shouldThrowSharedServiceLayerException_onFailure() {
    // Arrange
    ConfigurationObj inputObj = new ConfigurationObj();
    ConfigurationDto dto = new ConfigurationDto();

    // Create the service with a mocked dependency
    ConfigurationService mockService = mock(ConfigurationService.class);
    ConfigurationOpsApiService service = new ConfigurationOpsApiService(mockService);

    // Mock static mapper behavior if needed, or ensure dto is fine
    // Skip mocking MAPPER here if you just want to hit the exception via configService

    // Simulate exception when configService.createConfiguration() is called
    when(mockService.createConfiguration(any())).thenThrow(new RuntimeException("DB failure"));

    // Act & Assert
    SharedServiceLayerException exception = assertThrows(
        SharedServiceLayerException.class,
        () -> service.createConfig(inputObj)
    );

    assertTrue(exception.getMessage().contains("Failed to create configuration"));
}