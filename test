@Test
public void searchClientApps_BothClientIdAndLobIdNull_ShouldThrowException() {
    String lobId = null;
    String clientId = null;

    SharedServiceLayerException thrown = Assertions.assertThrows(
        SharedServiceLayerException.class,
        () -> clientAppsApiDelegate.searchClientApps(lobId, clientId)
    );

    Assertions.assertTrue(thrown.getMessage().contains("At least one of lobId or clientId is required"));
}