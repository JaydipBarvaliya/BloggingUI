@Test
public void createNotifyEvent_ExceptionTest() {
    Map<String, Object> requestBody = Mockito.mock(Map.class);

    // Simulate exception when calling toString()
    Mockito.when(requestBody.toString()).thenThrow(new RuntimeException("Simulated exception"));

    SharedServiceLayerException thrown = Assertions.assertThrows(
        SharedServiceLayerException.class,
        () -> notifyApiDelegate.createNotifyEvent(requestBody)
    );

    Assertions.assertEquals("EXPECTED_STATUS", thrown.getStatus().getStatus()); // Replace with actual expected status string
}