public static int minRetailersToRelocate(List<Integer> regionStart, List<Integer> regionEnd) {
    int n = regionStart.size();
    int[][] intervals = new int[n][2];

    for (int i = 0; i < n; i++) {
        intervals[i][0] = regionStart.get(i);
        intervals[i][1] = regionEnd.get(i);
    }

    // Sort intervals by start time
    Arrays.sort(intervals, Comparator.comparingInt(a -> a[0]));

    // Min heap of end times
    PriorityQueue<Integer> minHeap = new PriorityQueue<>();
    int maxOverlap = 0;

    for (int[] interval : intervals) {
        int start = interval[0];
        int end = interval[1];

        // Remove regions that end before current starts (no overlap)
        while (!minHeap.isEmpty() && minHeap.peek() < start) {
            minHeap.poll();
        }

        // Add current region
        minHeap.offer(end);

        // Heap size is count of overlaps at this point
        maxOverlap = Math.max(maxOverlap, minHeap.size());
    }

    return n - maxOverlap;
}