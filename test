@Test
void test_deleteConfig_shouldThrowException_whenConfigMismatch() {
    // Arrange
    String id = "101";

    // Simulate real config from DB
    Configuration configFromDB = new Configuration();
    configFromDB.setId(1L);  // db value

    // Simulate request payload
    ConfigurationObj input = new ConfigurationObj();
    input.setId(999L); // Different value to trigger mismatch

    // Mock repo call
    when(configurationService.findByConfigId(Long.valueOf(id))).thenReturn(configFromDB);

    // Act + Assert
    SharedServiceLayerException ex = assertThrows(
        SharedServiceLayerException.class,
        () -> configurationOpsApiService.deleteConfig(id, input)
    );

    assertTrue(ex.getMessage().contains("Unable to delete config as its not present in DB"));
}