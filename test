public class RequestUtil {

    private RequestUtil() {}

    public static HttpHeaders createBasicHeaders(NativeWebRequest request) {
        HttpHeaders headers = new HttpHeaders();
        if (request != null) {
            headers.set(HttpHeadersConstants.AUTHORIZATION_HEADER, request.getHeader(HttpHeadersConstants.AUTHORIZATION_HEADER));
            headers.set(HttpHeadersConstants.CONTENT_TYPE_HEADER, request.getHeader(HttpHeadersConstants.CONTENT_TYPE_HEADER));
        }
        return headers;
    }
}