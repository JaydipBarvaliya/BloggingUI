private HttpHeaders createBasicHeaders() {
    HttpHeaders httpHeaders = new HttpHeaders();
    this.getRequest().ifPresent(req -> {
        httpHeaders.set(HttpHeaderConstants.AUTHORIZATION, req.getHeader(HttpHeaderConstants.AUTHORIZATION));
        httpHeaders.set(HttpHeaderConstants.CONTENT_TYPE, req.getHeader(HttpHeaderConstants.CONTENT_TYPE));
    });
    return httpHeaders;
}
