@Test
void test_deleteArchivalConfig_shouldThrowWhenEntityNotFound() {
    // Arrange
    String id = "123";
    ArchivalStorageConfigObj dummyInput = new ArchivalStorageConfigObj();

    // Mock repo.findById to return empty
    when(repo.findById(Long.valueOf(id))).thenReturn(Optional.empty());

    // Act & Assert
    SharedServiceLayerException ex = assertThrows(
        SharedServiceLayerException.class,
        () -> archLobStorageMappingService.deleteArchivalConfig(id, dummyInput)
    );

    assertTrue(ex.getMessage().contains("Data not available to delete for ID"));
}