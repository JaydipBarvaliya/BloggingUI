int count = 0;

for (int currentReward : initialRewards) {
    // If this customer has the highest initial reward,
    // then the best other total would come from the second highest
    int bestOtherPossibleTotal = (currentReward == max1)
        ? (max2 + n - 1)
        : (max1 + n - 1);

    // If this customerâ€™s total (after winning) is at least as much as the best other total
    int totalIfThisCustomerWins = currentReward + n;
    if (totalIfThisCustomerWins >= bestOtherPossibleTotal) {
        count++;
    }
}